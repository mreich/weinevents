<% content_for :head do %>
  <title> <%= @event.title %> | <%=t :wineevents %></title>
<% end %>

<div class="row">
    <div class="span9 offset0">
        <div class="well">
            <h1>
              <%= @event.title %>
            </h1> 
            <br/>
            <p>
  						<%= @event.description %>
						</p>
            <br/>
            <p>
               <%=t :event_sitecity_id %>: <%= @event.sitecity.name %>
            </p>
            <p>
              <% if @event.price == nil %>
              <% else %>
                <%=t :event_price %>: <%= @event.price %>
              <% end %>
            </p>
            <p>
              <%= raw @event.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %>
            </p>
            <p>
  						<%=t :submitted_by %>: <%= @event.user.name %>
						</p>
            <p>
              <%=t :more_info %> <%= link_to t(:here), @event.website %>
            </p>
						<%= image_tag @event.image %>
            <br/><br/>
						<% if current_user == @event.user %> 
							<%= link_to t(:edit), edit_event_path(@event) %> |
						<% end %>
						<%= link_to t(:back), events_path %>
        </div>
    </div>
</div>