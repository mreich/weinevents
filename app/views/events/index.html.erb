<% if params[:tag] %>
  <% content_for :head do %>
    <title> TAG Weinevents</title>
  <% end %>
<% else %>
  <% if params[:sitecity] %>
    <% content_for :head do %>
      <% @sitecity = Sitecity.find_by_url(params[:sitecity]) %>
      <title>Weinevents in <%= @sitecity.name %> | Weinproben in <%= @sitecity.name %> | Weinseminare in <%= @sitecity.name %></title>
    <% end %>    
  <% end %>
<% end %>


<% if params[:sitecity] %>
  <h1>Wine events in <%= @sitecity.name %></h1><br/> 
<% else %>
  <h1>The latest wine events</h1><br/>
<% end %> 

<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <%= render @events.current %>
  </tbody>

</table>

<br />

<%= will_paginate @events.current %><br />

<% if params[:sitecity] %>
  <h3>Past wine events in <%= @sitecity.name %></h3><br/> 
<% else %>
  <h3>Past wine events</h3><br/>
<% end %> 

<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <%= render @events.past %>
  </tbody>

</table>

<br />

<%= will_paginate @events.past %><br />

<%= link_to "Add a new wine event now", new_event_path %>
<br /><br />

<div id="tag_cloud">
  <% tag_cloud Event.tag_counts, %w[s m l] do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), class: css_class %>
  <% end %>
</div>

<% unless user_signed_in? %>
  <% if params[:sitecity] %>
  <% else %>
    <%= render 'pages/home' %>
  <% end %>
<% end %>