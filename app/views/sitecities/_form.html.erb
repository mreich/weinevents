<%= simple_form_for(@sitecity, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

	<%= f.input :name, label: t(:sitecity), as: :text, input_html: { rows: "1" } %>
	<%= f.input :country_id, label: t(:sitecity_country_id), :collection => Country.all.collect %>
	<%= f.input :description, label: t(:sitecity_description), as: :text, input_html: { rows: "20" } %>

  <div class="form-actions">
    <%= f.button :submit, label: t(:sitecity), class: "btn btn-primary" %>
  </div>
<% end %>
