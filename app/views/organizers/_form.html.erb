<%= simple_form_for(@organizer, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :sitecity_id, label: t(:organizer_sitecity_id), :collection => Sitecity.all(order: 'name') %>
  <%= f.input :name, label: t(:organizer_name), as: :text, input_html: { rows: "1", class: "span8" } %>
  <%= f.input :description, label: t(:organizer_description), as: :text, input_html: { rows: "20", class: "span8" } %>
  <%= f.input :website, label: t(:organizer_website), as: :text, input_html: { rows: "1", class: "span5" } %>
  <%= f.input :eventpage, label: t(:organizer_eventpage), as: :text, input_html: { rows: "1", class: "span5" } %>
  <%= f.input :email, label: t(:organizer_email), as: :text, input_html: { rows: "1", class: "span5" } %>
  <%= f.input :phone, label: t(:organizer_phone), as: :text, input_html: { rows: "1", class: "span5" } %>
  <%= f.input :sitecity_id, label: t(:organizer_default_location), :collection => Location.all(order: 'name'), hint: "#{link_to t(:new_location), new_location_path}" %>

   <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
